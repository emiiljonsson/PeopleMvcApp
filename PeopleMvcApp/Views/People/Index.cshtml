@model PeopleMvcApp.Models.PeopleViewModel

<h2>People List</h2>
<!-- Sökformulär -->
@using (Html.BeginForm("Index", "People", FormMethod.Get))
{
    <p>
        Search: @Html.TextBox("searchString", Model.SearchString)
        <input type="submit" value="Search" />
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone Number</th>
            <th>City</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var person in Model.People)
    {
        <tr>
            <td>@person.Name</td>
            <td>@person.PhoneNumber</td>
            <td>@person.City</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = person.Id }) |
                @Html.ActionLink("Details", "Details", new { id = person.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = person.Id })
            </td>
        </tr>
    }
    </tbody>
</table>
@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
